Coordinates({\n        lat: data.latLng.lat(),\n        lng: data.latLng.lng(),\n      });\n    },\n  },\n  computed: {\n    ...mapGetters([\n      'productsList',\n      'currentCoordinates',\n      'searchString',\n      'pageNumber',\n    ]),\n  },\n  watch: {\n    pageNumber: {\n      immediate: true,\n      handler(value) {\n        this.fetchProducts({\n          lat: this.currentCoordinates.lat,\n          lng: this.currentCoordinates.lng,\n          name: this.searchString,\n          pageNumber: value,\n        });\n      },\n    },\n    currentCoordinates: function (value) {\n      this.fetchProducts({\n        lat: value.lat,\n        lng: value.lng,\n        name: this.searchString,\n        pageNumber: 1,\n      });\n    },\n  },\n};\n</script>\n\n<style lang=\"scss\" scoped>\n.container {\n  grid-area: marketplace;\n  display: grid;\n  grid-template-rows: minmax(250px, 1fr) minmax(250px, 1fr);\n}\n.products-list {\n  display: flex;\n  flex-direction: column;\n  overflow-y: scroll;\n}\n\n@media all and (max-width: 768px) {\n  .container {\n    grid-template-rows: 1fr 350px;\n  }\n}\n</style>\n"]}]}